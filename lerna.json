{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false,
  "useWorkspaces": true,
  "npmClient": "pnpm",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "stream ": true,
      "sort": true
    },
    "publish": {
      "allowBranch": "master",
      "bump": "patch",
      "conventialCommits": true,
      "message": "chore(release): Publish"
    },
    "run": {
      "stream ": true,
      "sort": true
    }
  },
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__testfixtures__/**"
  ]
}
