{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fuxiang123/toolkit"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "lerna run build --stream --sort",
    "create:pkg": "node scripts/create",
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix packages",
    "lint:error": "eslint --ext .ts,.js --ignore-path .gitignore --fix --quiet packages",
    "commit": "npx git-cz",
    "prepublush:pkg": "npm run build",
    "publish:pkg": "lerna publish",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@fuxiang1234/eslint-config": "workspace:*",
    "@fuxiang12341234/tsconfig": "workspace:*",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.2.3",
    "@types/node": "^22.8.6",
    "commander": "^9.4.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "cz-customizable": "^6.9.0",
    "eslint": "^7.32.0",
    "handlebars": "^4.7.7",
    "husky": "^8.0.0",
    "inquirer": "^8.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^5.5.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.4",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "template-file": "^6.0.1",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npx lint"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "npx prettier --write"
  }
}